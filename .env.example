# ===============================================
# IM-CONNECTED Docker Environment Configuration
# ===============================================
# Copy this file to .env and fill in your actual values

# ===============================================
# DATABASE CONFIGURATION
# ===============================================
MONGODB_URI=mongodb://admin:password@mongodb:27017/im-connected?authSource=admin

# ===============================================
# SERVICE PORTS
# ===============================================
PORT=5001
SCANNER_PORT=3001
AI_CHATBOT_PORT=3000

# ===============================================
# AUTHENTICATION & SECURITY
# ===============================================
TOKEN_KEY=your-super-secret-jwt-key
JWT_SECRET=your-super-secret-jwt-key
TOKEN_EXPIRY=1d

# ===============================================
# EMAIL CONFIGURATION
# ===============================================
AUTH_EMAIL=your-email@gmail.com
AUTH_PASS=your-app-password
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# ===============================================
# GOOGLE CLOUD STORAGE CONFIGURATION
# ===============================================
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_CLOUD_KEY_FILE=./path/to/service-account-key.json
GCS_BUCKET_NAME=your-gcs-bucket-name=your-gcs-bucket-name

# ===============================================
# AI SERVICES
# ===============================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_ASSISTANT_ID=your-openai-assistant-id
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

# ===============================================
# ENVIRONMENT SETTINGS
# ===============================================
NODE_ENV=production
